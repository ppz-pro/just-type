@import '@ppzp/stylus'

.jt-options
  fixed(top: 1rem, right: 2rem, left: 2rem)
  display: flex
  align-items: stretch
  justify-content: space-between
  color: text(a: .5)
  font-size: .8rem
  & > div
    display: flex
    align-items: center
  .right > *
    margin-left: 1rem
    color: text(a: .5)
    &:hover
      color: text(a: 1)
  a
    text-decoration: none
    &.iconfont
      font-size: 1.5rem
  button
    border: none
    outline: none
    background: transparent
    padding: 0
    cursor: pointer
    font-size: .8rem