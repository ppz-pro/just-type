@import '@ppzp/stylus'

.jt-options
  fixed(1rem, 1rem)
  & > *
    color: text(a: .5)
    margin-right: 1rem
    &:hover
      color: text(a: .8)
  a
    text-decoration: none
    &.iconfont
      font-size: 1.5rem
  button
    border: none
    outline: none
    background: transparent
    line-height: 1.5rem
    height: 1.5rem
    padding: 0