@import '@ppzp/stylus'
@import '../variables'

html, body
  margin: 0
  padding: 0
  line-height: 1
body
  max-width: $max-width
  margin: 0 auto
  position: relative
*
  box-sizing: border-box

.jt-options
  $height = 1.5rem
  padding: 1rem 2rem
  display: flex
  align-items: stretch
  justify-content: space-between
  color: text(a: .5)
  font-size: .8rem
  & > div
    display: flex
    align-items: center
  .right > *
    margin-left: 1rem
    color: text(a: .5)
    &:hover
      color: text(a: 1)
  a
    text-decoration: none
    line-height: $height
    &.iconfont
      font-size: $height
  button
    border: none
    outline: none
    background: transparent
    padding: 0
    cursor: pointer
    height: $height
    font-size: .8rem
.jt-no-scroll
  height calc(100vh - 3.5rem) // 1rem * 2 + 1.5rem